# 环境变量配置
# 请复制此文件为 .env

# ==================== API配置 ====================
API_HOST=0.0.0.0
API_PORT=8088
API_DEBUG=False
SECRET_KEY=your-secret-key-change-this-in-production

# ==================== CORS配置 ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== 数据库配置 ====================
# 数据库类型: sqlite, mysql, postgresql
DB_TYPE=mysql

# SQLite配置 (当DB_TYPE=sqlite时使用)
SQLITE_PATH=data/attendance.db

# MySQL配置 (当DB_TYPE=mysql时使用)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=lzg20040101
MYSQL_DATABASE=attendance_system
MYSQL_CHARSET=utf8mb4

# ==================== 模型配置 ====================
# YOLO检测阈值 (0.0-1.0)
YOLO_THRESHOLD=0.5

# 用户注册时采集的人脸数量
REGISTER_FACE_COUNT=10

# 人脸识别阈值
FACE_RECOGNITION_THRESHOLD=0.6

# ==================== GPU配置 ====================
# 是否使用CUDA加速
USE_CUDA=True
# CUDA设备索引
CUDA_DEVICE=0

# ==================== 摄像头配置 ====================
# 摄像头索引 (0为默认摄像头)
CAMERA_INDEX=0
# 视频帧率
VIDEO_FPS=30

# ==================== 日志配置 ====================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# SQL查询日志
SQL_ECHO=False

# ==================== 其他配置 ====================
# 考勤记录保留天数
ATTENDANCE_RETENTION_DAYS=365

# 图像质量 (1-100)
IMAGE_QUALITY=85

# Base64图像最大大小(KB)
MAX_IMAGE_SIZE_KB=500
